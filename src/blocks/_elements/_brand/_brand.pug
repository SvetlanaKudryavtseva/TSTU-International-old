mixin brand (component, className)
    <!-- begin brand -->
    div(class=className)
        a(class=className+'__link' href="index.html")
            img(class=className+'__logo' src="../assets/images/logo/TSTU_logo.svg" alt="logo of Tambov State Technical University")
        if pageClass === 'index-page'
            div(class= className+'__name')
                h1
                    a(class=className+'__link' href="index.html")
                        span(class=className+'__title')= 'Tambov State '
                        span(class=className+'__title')= 'Technical University'
                div(class=className+'__slogan')= 'Feature begins today!'
        else
            div(class=className+'__name')
                h1
                    a(class=className+'__link' href="index.html")
                        span(class=className+'__title')= 'Tambov State '
                        span(class=className+'__title')= 'Technical University'
                div(class=className+'__slogan')= 'Feature begins today!'
    <!-- end brand -->